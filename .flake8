[flake8]
max-line-length = 120
max-complexity = 18
ignore = E203, E266, W503, D102, D103, D104, D100, D101, D105, D107, D106, D121, D205, D415, E501, D212, D300, E741
docstring-convention = google
per-file-ignores = __init__.py:F401
exclude = .git,
    __pycache__,
    setup.py,
    build,
    dist,
    docs,
    releases,
    .venv,
    .tox,
    .mypy_cache,
    .pytest_cache,
    .vscode,
    .github,
    # By default test codes will be linted.
    # tests
